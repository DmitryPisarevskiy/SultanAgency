<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SmallCaption">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/textFillColor</item>
    </style>
    <style name="SmallText">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="SmallValuableText">
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
    <style name="StandartCaption">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">?attr/textFillColor</item>
    </style>
    <style name="StandartText">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="StandartValuableText">
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
    <style name="MainItem">
        <item name="backgroundColor">?attr/colorPrimaryContainer</item>
    </style>
    <style name="bottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="ToolbarColoredBackArrow">
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryVariant">#FFFFFF</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorPrimaryContainer">#FFFFFF</item>
        <item name="colorSecondary">#FFFFFF</item>
        <item name="colorSecondaryVariant">#FFFFFF</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="textFillColor">#FFFFFF</item>
        <item name="android:statusBarColor">#FFFFFF</item>
    </style>
</resources>