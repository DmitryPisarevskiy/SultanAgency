<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/small_margin"
    android:background="?attr/colorPrimaryContainer">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_margin"
            android:background="?attr/colorPrimaryContainer">
            <ImageView
                android:contentDescription="@string/iv_main_description"
                android:id="@+id/iv_post_picture"
                android:layout_width="0dp"
                android:layout_height="250dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/flat"
                android:scaleType="centerCrop"/>
            <ImageButton
                android:id="@+id/ib_post_left"
                android:layout_width="60dp"
                android:layout_height="90dp"
                app:layout_constraintTop_toTopOf="@id/iv_post_picture"
                app:layout_constraintBottom_toBottomOf="@id/iv_post_picture"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/baseline_arrow_left_24"/>
            <ImageButton
                android:id="@+id/ib_post_right"
                android:layout_width="60dp"
                android:layout_height="90dp"
                app:layout_constraintTop_toTopOf="@id/iv_post_picture"
                app:layout_constraintBottom_toBottomOf="@id/iv_post_picture"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/baseline_arrow_right_24"/>
            <ImageButton
                android:id="@+id/ib_post_save"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="@dimen/standart_margin"
                app:layout_constraintEnd_toStartOf="@id/ib_post_favourite"
                android:background="@drawable/baseline_save_24"
                android:backgroundTint="@color/white"
                android:backgroundTintMode="multiply"/>

            <ImageButton
                android:id="@+id/ib_post_favourite"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="@dimen/standart_margin"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/heart_white"/>

            <TableLayout
                android:id="@+id/tl_post_adress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                app:layout_constraintTop_toBottomOf="@id/iv_post_picture">
                <TableRow>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_post_street"
                            style="@style/StandartCaption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/small_margin"
                            android:text="@string/tv_post_street"/>
                        <EditText
                            android:id="@+id/et_post_street"
                            style="@style/StandartText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/small_margin"
                            tools:text="Калинина"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_post_house"
                            style="@style/StandartCaption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/small_margin"
                            android:text="@string/tv_post_house"/>
                        <EditText
                            android:id="@+id/et_post_house"
                            style="@style/StandartText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/small_margin"
                            tools:text="54"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_post_flat"
                            style="@style/StandartCaption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/small_margin"
                            android:text="@string/tv_post_flat"/>
                        <EditText
                            android:id="@+id/et_post_flat"
                            style="@style/StandartText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/small_margin"
                            tools:text="36"/>
                    </LinearLayout>
                </TableRow>
                <TableRow>

                </TableRow>
            </TableLayout>

            <LinearLayout
                android:id="@+id/ll_post_adress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tl_post_adress"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_post_price"
                    style="@style/StandartCaption"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    android:textAllCaps="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_margin"
                    android:text="@string/tv_post_price"/>
                <EditText
                    android:id="@+id/et_post_price"
                    style="@style/StandartValuableText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_margin"
                    tools:text="1250"/>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/fl_post_adress"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray"
                app:layout_constraintTop_toBottomOf="@id/ll_post_adress"/>

            <TableLayout
                android:id="@+id/tl_post_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                app:layout_constraintTop_toBottomOf="@id/fl_post_adress">
                <TableRow>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_post_room_num"
                            style="@style/StandartCaption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_post_room_num"/>
                        <EditText
                            android:id="@+id/et_post_room_num"
                            style="@style/StandartText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="3"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical">
                        <TextView
                            android:id="@+id/tv_post_floor"
                            style="@style/StandartCaption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_post_floor"/>
                        <EditText
                            android:id="@+id/et_post_floor"
                            style="@style/StandartText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="3"/>
                    </LinearLayout>
                </TableRow>
                <TableRow>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_post_square_all"
                            style="@style/StandartCaption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_post_square_all"/>
                        <EditText
                            android:id="@+id/et_post_square_all"
                            style="@style/StandartText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="38"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_post_square_kitchen"
                            style="@style/StandartCaption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_post_square_kitchen"/>
                        <EditText
                            android:id="@+id/et_post_square_kitchen"
                            style="@style/StandartText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="13"/>
                    </LinearLayout>
                </TableRow>
                <TableRow>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical">
                        <TextView
                            android:id="@+id/tv_post_ceiling"
                            style="@style/StandartCaption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_post_ceiling"/>
                        <EditText
                            android:id="@+id/et_post_ceiling"
                            style="@style/StandartText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="2,8"/>
                    </LinearLayout>
                </TableRow>
            </TableLayout>

            <FrameLayout
                android:id="@+id/fl_post_info"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray"
                app:layout_constraintTop_toBottomOf="@id/tl_post_info"/>

            <TableLayout
                android:id="@+id/tl_post_additional_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_margin"
                android:stretchColumns="*"
                app:layout_constraintTop_toBottomOf="@id/fl_post_info">
                <TableRow>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:padding="@dimen/small_padding"
                        android:layout_margin="@dimen/small_margin"
                        android:background="@drawable/frame_green">
                        <TextView
                            style="@style/StandartCaption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/tv_post_balcony"/>
                        <CheckBox
                            android:id="@+id/cb_post_balcony"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:text="@string/cb_post_balcony"
                            android:textColor="@color/gray"/>
                        <CheckBox
                            android:id="@+id/cb_post_loggia"
                            android:textColor="@color/gray"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:text="@string/cb_post_loggia"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:padding="@dimen/small_padding"
                        android:layout_margin="@dimen/small_margin"
                        android:background="@drawable/frame_red">
                        <TextView
                            style="@style/StandartCaption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/tv_post_windows"/>
                        <CheckBox
                            android:id="@+id/cb_post_windows_type_to_yard"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:text="@string/cb_post_windows_type_to_yard"
                            android:textColor="@color/gray"/>
                        <CheckBox
                            android:id="@+id/cb_post_windows_type_to_street"
                            android:textColor="@color/gray"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:text="@string/cb_post_windows_type_to_street"/>
                    </LinearLayout>
                </TableRow>
                <TableRow>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:padding="@dimen/small_padding"
                        android:layout_margin="@dimen/small_margin"
                        android:background="@drawable/frame_blue">
                        <TextView
                            style="@style/StandartCaption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/tv_post_toilet"/>
                        <CheckBox
                            android:id="@+id/cb_post_toilet_together"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:text="@string/cb_post_toilet_together"
                            android:textColor="@color/gray"/>
                        <CheckBox
                            android:id="@+id/cb_post_toilet_separate"
                            android:textColor="@color/gray"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:text="@string/cb_post_toilet_separate"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:padding="@dimen/small_padding"
                        android:layout_margin="@dimen/small_margin"
                        android:background="@drawable/frame_yellow">
                        <TextView
                            style="@style/StandartCaption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/tv_post_rooms_type"/>
                        <CheckBox
                            android:id="@+id/cb_post_rooms_together"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:text="@string/cb_post_rooms_together"
                            android:textColor="@color/gray"/>
                        <CheckBox
                            android:id="@+id/cb_post_rooms_separate"
                            android:textColor="@color/gray"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:text="@string/cb_post_rooms_separate"/>
                    </LinearLayout>
                </TableRow>
            </TableLayout>

            <FrameLayout
                android:id="@+id/fl_post_additional_info"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray"
                app:layout_constraintTop_toBottomOf="@id/tl_post_additional_info"/>

            <TableLayout
                android:id="@+id/tl_post_agent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                app:layout_constraintTop_toBottomOf="@id/fl_post_additional_info">
                <TableRow>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_post_phone"
                            style="@style/StandartCaption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_post_phone"/>
                        <EditText
                            android:id="@+id/et_post_phone"
                            style="@style/StandartText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="+79875977555"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical">
                        <TextView
                            android:id="@+id/tv_post_name"
                            style="@style/StandartCaption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_post_name"/>
                        <EditText
                            android:id="@+id/et_post_name"
                            style="@style/StandartText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Альберт"/>
                    </LinearLayout>
                </TableRow>
            </TableLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
